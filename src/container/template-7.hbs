<header class="header">
    {{#with header}}
        <div class="header__top">
            <a href="/" class="button">{{brandName}}</a>
            <ul class="header__menu">
                {{#each links}}
                <li class="menu__item"><a href="{{url}}">{{text}}</a></li>  
                {{/each}}
            </ul>
        </div>
        <div class="header__ad">
            <div class="header__container">
                <div class="header__addbadge">Ad</div>
                <a class="header__text" href="{{ad.url}}">{{ad.text}}</a>
            </div>
            <div class="header_users">Users online: {{userOnline}}</div>
        </div>
    {{/with}}
</header>

<div class="hero">
    {{#with hero}}
        <h1 class="hero__title">{{title}}</h1>
        <div class="hero__description">{{description}}</div>
        <a class="hero__button" href="{{button.url}}">{{button.text}}</a>
    {{/with}}
</div>

<div class="about">
    {{#with about}}
    <h2 class="about__title">{{heading}}</h2>
    <p class="about__text">{{info}}</p>
    {{/with}}
</div>

<div class="articles">
    <h2 class="articles__title">Our Articles</h2>
    <div class="articles__wrapper">
        {{#each articles}}
            <div class="articles__container">
                <img class="articles__photo" src="{{photo}}" alt="photo">
                <h6 class="articles__name">{{name}}</h6>
                <p class="articles__description">{{description}}</p>
                <a href="#" class="button button--narrow">Read all</a>
            </div>
        {{/each}}
    </div>
</div>