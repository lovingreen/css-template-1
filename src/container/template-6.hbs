<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header isVertical=false}}
        </div>
    </nav>
</header>  

<main class="main">
    {{#with info}}
        <div class="info">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_paragraph">{{description}}</p>
        </div>
    {{/with}}

    {{#with form}}
        <form class="form">
            <h2 class="form_title">{{title}}</h2>

            <div class="form_input_list">
                {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
                {{/each}}
            </div>

            <div class="form_checkbox">

                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>

            <button class="form_button" type="submit">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
    {{/with}}
</main>
<div class="updates">
    {{#with updates}}
        <h3 class="updates_title">{{title}}</h3>
        {{#each list}}
            <div class="updates_container">
                <div class="updates_image">
                    32x32
                </div>
                <div class="updates_textblock">
                    <div class="updates_user">{{nickname}}</div>
                    <div class="updates_text">{{description}}</div>
                </div>
            </div>
        {{/each}}
        <a href="{{show_all.url}}">{{show_all.text}}</a>
    {{/with}}
</div>

<div class="experience">
    {{#with expirience}}
        <h3 class="experience_title">{{title}}</h3>
        <div class="experience_badge">{{badge}}</div>

        <div class="experience_container">
            {{#each list}}
                <div class="experience_block">
                    <h6 class="experience_name">{{name}}</h6>
                    <p class="experience_paragraph">{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>